<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.app.dexterity">

<head>
  <div metal:fill-slot="javascript_head_slot" tal:omit-tag="">
    <script type="text/javascript"
      tal:attributes="src string:${context/absolute_url}/communityVariables.js">
    </script>
    <script type="text/javascript"
      tal:attributes="src string:${context/absolute_url}/++maxui++static/maxui.loader.js">
    </script>
  </div>
  <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>

<metal:main fill-slot="main">

  <metal:content-core define-macro="main">

    <p style="text-align: center">
      <a class="btn btn-large btn-warning" tal:attributes="href string:${context/absolute_url}/documents/++add++File">Document</a>
      <a class="btn btn-large btn-warning" tal:attributes="href string:${context/absolute_url}/enllacos/++add++Link">Enllaç</a>
      <a class="btn btn-large btn-warning" tal:attributes="href string:${context/absolute_url}/fotos/++add++Image">Foto</a>
      <a class="btn btn-large btn-info"
         data-toggle="modal" data-remote="editCommunity" data-target="#editmodal"
         tal:condition="view/canEditCommunity">Editar comunitat</a>
    </p>

    <div id="maxui-widget-container"></div>

    <!-- Modal -->
    <div id="editmodal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="editModalLabel">Modal header</h3>
      </div>
      <div class="modal-body">
        <p>One fine body…</p>
      </div>
    </div>

  </metal:content-core>
</metal:main>

</body>
</html>
